<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_primary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    android:weightSum="1"
    tools:context="com.aakash.healthalert.Primary">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        app:srcCompat="@mipmap/logo" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.20" />

    <ImageButton
        android:id="@+id/O2"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:background="@android:color/transparent"
        app:srcCompat="@mipmap/oxygenlevel2" />

    <ImageButton
        android:id="@+id/BP"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:background="@android:color/transparent"
        app:srcCompat="@mipmap/bloodpressure2" />


    <ImageButton
        android:id="@+id/RR"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:background="@android:color/transparent"
        app:srcCompat="@mipmap/respirationrate2" />

    <ImageButton
        android:id="@+id/HR"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:background="@android:color/transparent"
        app:srcCompat="@mipmap/heartrate2" />


    <ImageButton
        android:id="@+id/VS"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:background="@android:color/transparent"
        app:srcCompat="@mipmap/allvitals" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.20" />

    <ImageButton
        android:id="@+id/About"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:background="@android:color/transparent"
        android:scaleType="fitEnd"
        app:srcCompat="@mipmap/about" />


</LinearLayout>
